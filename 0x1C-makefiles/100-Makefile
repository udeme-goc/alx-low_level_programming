CC = gcc
SRC = main.c school.c
OBJ =$(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

-include $(SRC:.c=.d)

%.o: %.c
	$(CC) $(CFLAGS) -MMD -c $< -o $@

clean:
	$(RM) *~ $(OBJ) $(SRC:.c=.d)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
